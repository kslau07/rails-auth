<h1>Log in</h1>
<%= form_with url: sessions_path do |f| %>
	<div class="field">
		<%= f.label :email %><br>
		<%= f.email_field :email %>
	</div>
	<div class="field">
		<%= f.label :password %><br>
		<%= f.password_field :password %>
	</div>
	<p><%= link_to 'forgotten password?', new_password_reset_path %></p>
	<div class="field">
		<%= f.check_box :remember_me, { checked: true }, 'yes', 'no'  %>
		<%= f.label :remember_me %>
	</div>
	<div class="actions"><%= f.submit "Log in" %></div>
<% end %>
