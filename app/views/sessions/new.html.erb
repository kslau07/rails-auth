<h1>Log in</h1>
<%= form_with url: sessions_path do |f| %>
	<div class="field">
		<%= f.label :email %><br>
		<%= f.email_field :email %>
	</div>
	<div class="field">
		<%= f.label :password %><br>
		<%= f.password_field :password %>
	</div>
	<div class="field">
		<%= f.label :password_confirmation %><br>
		<%= f.password_field :password_confirmation %>
	</div>
	<div class="actions"><%= f.submit "Log in" %></div>
<% end %>
